<%= form_for(@event) do |f| %>
<div class="form-group">
  <%= f.label :photo %>
  <%= f.file_field :photo %>
</div>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
</div>
<div class="row">
  <div class="form-group col-md-6">
    <%= f.label :date_time %>
    <%= f.text_field :date_time, class: "form-control" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :local %>
    <%= f.text_field :local, class: "form-control" %>
  </div>
</div>
<div class="form-group ">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control", rows: 10 %>
</div>
<% if current_user.facebook? %>
  <div class="form-group">
    <%= f.label "Postar no facebook?" %>
    <%= f.check_box :enable_facebook_post, class: "form-control" %>
  </div>  
<% end %>
<%= f.submit nil, class: "btn btn-success" %>
<% end %>