<div ng-controller="EventCtrl as eCtrl" ng-init="eCtrl.load()">
  <div infinite-scroll="eCtrl.scroll()" infinite-scroll-distance="3">
    <div class="list-group">
      <div ng-repeat="event in eCtrl.events" style="padding-bottom=20px">
        <div class="list-group-item">
          <div class="media col-md-3">
            <div class="pull-left">
              <img class="blogicon" ng-src="{{event.photo}}" />
            </div>
          </div>
          <div class="col-md-6">
            <h4 class="list-group-item-heading"><a ng-href="/events/{{event.id}}">{{ event.title }}</a></h4>
            <p class="list-group-item-text">
              {{ event.description }}
            </p>
          </div>
          <div class="col-md-3 text-center">
            <div class="panel panel-default">
              <div class="panel-body">
                <div class="ratetext">Ir</div>
                <i class="fa fa-5x fa-thumbs-o-up" ng-class="{ confirm: event.confirmed == true, unconfirm: event.confirmed == false }" ng-click="eCtrl.presence(event.id)"></i>
                <h2>{{ event.presences_count }}<small> {{ event.presences_count > 1 ? "VÃ£o" : "Vai" }}</small></h2>
                <div id="rate1" class="sui-rating"><div id="shieldRating-range-2" class="sui-rating-range" tabindex="0" style="width: 160px; height: 16px;"><div class="sui-rating-selected" style="height: 16px; width: 116.8px;"></div><div class="sui-rating-hover" style="height:16px"></div></div></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>